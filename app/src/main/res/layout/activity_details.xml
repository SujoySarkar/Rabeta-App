<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    tools:context=".Button_6.Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <ImageView
                android:layout_marginBottom="20dp"
                android:id="@+id/image60"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"

                android:scaleType="fitXY" />
            <TextView
                android:layout_marginBottom="15dp"

                android:id="@+id/details60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="details"
                android:textColor="#FF5722"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="15dp"
                android:textColor="#3F51B5"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/address60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dhanmondi_32"
                />

            <TextView
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textColor="#F10B59"
                android:id="@+id/phone60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01728381717"
                android:textSize="25sp" />

            <TextView
                android:textColor="#3F51B5"

                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:id="@+id/price60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="25sp" />

            <TextView
                android:textColor="#4CAF50"

                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:id="@+id/date60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gfgf"
                android:textSize="25sp" />



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/flot1"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>